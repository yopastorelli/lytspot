{
  "name": "lytspot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "set NODE_ENV=production && npx prisma generate --schema=server/prisma/schema.prisma && astro build",
    "preview": "astro preview",
    "deploy": "set NODE_ENV=production && astro build && npx gh-pages -d dist -b gh-pages",
    "generate-portfolio": "node --loader ts-node/esm scripts/generatePortfolioItems.ts",
    "prestart": "node server/scripts/prestart.js",
    "start": "node server/server.js",
    "postinstall": "npx prisma generate --schema=server/prisma/schema.prisma && node render-setup.js && npm run build",
    "verificar-persistencia": "node server/scripts/verificarPersistencia.js",
    "inicializar-sistema": "node server/scripts/inicializarSistema.js",
    "monitor-db": "node server/scripts/monitorBancoDados.js",
    "update-services": "node server/scripts/atualizarServicosEmMassa.js",
    "sync-demo-data": "node server/scripts/atualizarDadosDemonstracao.js",
    "manage-services": "node server/scripts/gerenciarServicos.js",
    "update-prod-services": "node server/scripts/atualizarServicosProd.js",
    "build:services": "node server/scripts/render-build-services.js"
  },
  "dependencies": {
    "@astrojs/react": "^4.2.1",
    "@astrojs/tailwind": "^6.0.0",
    "@heroicons/react": "^2.0.18",
    "@prisma/client": "^5.22.0",
    "astro": "^5.4.2",
    "axios": "^1.8.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.2",
    "express": "^4.21.2",
    "express-validator": "^6.15.0",
    "jsonwebtoken": "^9.0.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.1",
    "prisma": "^5.10.2",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.30.0",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "nodemon": "^2.0.15",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "vitest": "^0.30.0"
  },
  "resolutions": {
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.0.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
