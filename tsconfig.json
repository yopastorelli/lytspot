{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",  // Use the new JSX transform
    "jsxImportSource": "react",
    "types": ["astro/astro-jsx", "react", "react-dom", "node"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/env.d.ts",
    "src/**/*"
  ]
}
