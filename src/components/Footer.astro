---
import { Image } from 'astro:assets';

const footerLinks = {
  empresa: [
    { text: 'Sobre', href: '/sobre' },
    { text: 'Serviços', href: '/servicos' },
    { text: 'Portfólio', href: '/portfolio' },
    { text: 'Contato', href: '/contato' }
  ],
  servicos: [
    { text: 'Filmagem com Drone', href: '/servicos#drone' },
    { text: 'Fotografia Profissional', href: '/servicos#foto' },
    { text: 'Vídeos Corporativos', href: '/servicos#video' }
  ],
  social: [
    { text: 'Instagram', href: 'https://instagram.com/lytspot' },
    { text: 'Facebook', href: 'https://facebook.com/lytspot' },
    { text: 'YouTube', href: 'https://youtube.com/lytspot' },
    { text: 'LinkedIn', href: 'https://linkedin.com/company/lytspot' }
  ]
};
---

<footer class="bg-dark-lighter text-gray-200 pt-16 pb-8 border-t border-gray-700/50">
  <div class="container">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <div>
        <img src="//public/images/Branco fundo transparente.png" alt="LYTSPOT" class="h-8 mb-4" />
        <p class="text-gray-300">
          Especialistas em captura de imagens profissionais com drones e câmeras de alta performance.
        </p>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 text-white">Empresa</h3>
        <ul class="space-y-2">
          {footerLinks.empresa.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-white transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 text-white">Serviços</h3>
        <ul class="space-y-2">
          {footerLinks.servicos.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-white transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 text-white">Redes Sociais</h3>
        <ul class="space-y-2">
          {footerLinks.social.map(link => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-300 hover:text-white transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-700/50 pt-8">
      <p class="text-center text-gray-400">
        © {new Date().getFullYear()} LYTSPOT. Todos os direitos reservados.
      </p>
    </div>
  </div>
</footer>