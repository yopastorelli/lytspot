---
import { Image } from 'astro:assets';

const footerLinks = {
  empresa: [
    // { text: 'Sobre', href: '/sobre' },
    { text: 'Serviços', href: '/servicos' },
    { text: 'Portfolio', href: '/portfolio' },
    { text: 'Contato', href: '/contato' }
  ],
  servicos: [
    { text: 'Filmagem com Drone', href: '/servicos#drone' },
    { text: 'Fotografia Profissional', href: '/servicos#foto' },
    { text: 'Vídeos Corporativos', href: '/servicos#video' }
  ],
  social: [
    { text: 'Instagram', href: 'https://instagram.com/lytspot', icon: '/icons/instagram.png' },
    { text: 'Facebook', href: 'https://facebook.com/lytspot', icon: '/icons/facebook.png' },
    { text: 'YouTube', href: 'https://youtube.com/lytspot', icon: '/icons/youtube.png' },
    { text: 'LinkedIn', href: 'https://linkedin.com/company/lytspot', icon: '/icons/linkedin.png' }
  ]
};
---

<footer class="bg-light-darker text-neutral pt-16 pb-8 border-t border-neutral/10 shadow-soft">
  <div class="container">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <div>
        <img src="/images/azul fundo branco.png" alt="LYTSPOT" class="h-10 mb-4" />
        <p class="text-neutral/80">
          Especialistas em captura de imagens profissionais com drones e câmeras de alta performance.
        </p>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 text-primary">Empresa</h3>
        <ul class="space-y-2">
          {footerLinks.empresa.map(link => (
            <li>
              <a
                href={link.href}
                class="text-neutral/80 hover:text-primary transition-colors focus:outline-none focus:ring-2 focus:ring-primary"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 text-primary">Serviços</h3>
        <ul class="space-y-2">
          {footerLinks.servicos.map(link => (
            <li>
              <a
                href={link.href}
                class="text-neutral/80 hover:text-primary transition-colors focus:outline-none focus:ring-2 focus:ring-primary"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-4 text-primary">Redes Sociais</h3>
        <ul class="space-y-2">
          {footerLinks.social.map(link => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center text-neutral/80 hover:text-primary transition-colors focus:outline-none focus:ring-2 focus:ring-primary"
              >
                <img src={link.icon} alt={link.text} class="h-5 w-5 mr-2" />
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-neutral/10 pt-8">
      <p class="text-center text-neutral/60">
        {new Date().getFullYear()} LYTSPOT. Todos os direitos reservados.
      </p>
    </div>
  </div>
</footer>
