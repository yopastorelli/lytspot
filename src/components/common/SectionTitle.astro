---
interface Props {
  title?: string;
  subtitle?: string;
  titleInverted?: string;
  subtitleInverted?: string;
  alignment?: 'left' | 'center' | 'right';
}

const { 
  title, 
  subtitle, 
  titleInverted, 
  subtitleInverted,
  alignment = 'center'
} = Astro.props;

const alignmentClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};
---

<div class={`mb-2 ${alignmentClasses[alignment]}`}>
  {title && <h2 class="text-4xl font-bold mb-4 text-dark-lighter">{title}</h2>}
  {titleInverted && <h2 class="text-4xl font-bold mb-4 text-primary">{titleInverted}</h2>}
  {subtitle && <p class="text-xl text-dark-lighter">{subtitle}</p>}
  {subtitleInverted && <p class="text-xl text-white">{subtitleInverted}</p>}
</div>
