---
interface Props {
  title?: string;
  subtitle?: string;
  titleinv?: string;
  subtitleinv?: string;
}

const { title, subtitle, titleinv, subtitleinv } = Astro.props;
---

<div class="text-center mb-12">
  <h2 class="text-4xl font-bold mb-4">{title}</h2>
  <h2 class="text-4xl font-bold mb-4 text-primary">{titleinv}</h2>
  {subtitle && <p class="text-xl text-gray-600">{subtitle}</p>}
  {subtitleinv && <p class="text-xl text-white">{subtitleinv}</p>} 
</div>