---
import { MapPinIcon, PhoneIcon, EnvelopeIcon } from '@heroicons/react/24/outline';

const contactInfo = [
  {
    icon: PhoneIcon,
    title: 'Telefone',
    content: '+55 (41) 99888-0303 (Daniel)',
    link: 'tel:+5541998880303',
    whatsapp: 'https://wa.me/5541998880303'
  },
  {
    icon: PhoneIcon,
    title: 'Telefone',
    content: '+55 (41) 99930-4700 (Lucas)',
    link: 'tel:+5541999304700',
    whatsapp: 'https://wa.me/5541999304700'
  },
  {
    icon: EnvelopeIcon,
    title: 'E-mail',
    content: 'contato@lytspot.com.br',
    link: 'mailto:contato@lytspot.com.br'
  },
  {
    icon: MapPinIcon,
    title: 'Endereço',
    content: 'Curitiba, PR',
    link: '#'
  }
];
---

<div>
  <h3 class="text-2xl font-bold mb-6 text-dark-lighter">Informações de Contato</h3>
  <div class="space-y-6">
    {contactInfo.map(item => (
      <div class="flex items-start gap-4">
        <div class="w-12 h-12 bg-primary-light/10 rounded-full flex items-center justify-center">
          <item.icon className="w-6 h-6 text-primary-light" />
        </div>
        <div class="flex-1">
          <h4 class="font-bold text-dark-lighter">{item.title}</h4>
          <div class="flex items-center gap-2">
            <a
              href={item.link}
              class="text-dark-lighter hover:text-black transition-colors"
            >
              {item.content}
            </a>
            
            {item.whatsapp && (
              <a 
                href={item.whatsapp} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-5 h-5 hover:opacity-80 transition-opacity"
                title="Enviar mensagem no WhatsApp"
                aria-label="Enviar mensagem no WhatsApp"
              >
                <img src="/images/whatsapp-logo.svg" alt="WhatsApp" class="w-5 h-5" />
              </a>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
