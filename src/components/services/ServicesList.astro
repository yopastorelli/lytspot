---
import Container from '../common/Container';
import { SERVICES } from '../../utils/constants';
---

<section class="py-20 bg-dark-lighter">
  <Container>
    <div class="grid md:grid-cols-3 gap-8">
      {SERVICES.map(service => (
        <div class="bg-dark p-8 rounded-lg border border-gray-700/50 hover:border-primary-light transition-colors">
          <div class="w-full h-72 mb-6 overflow-hidden rounded-lg flex items-center justify-center">
            <img 
              src={service.image} 
              alt={service.title}
              class="max-h-full max-w-full object-contain"
            />
          </div>
          <h3 class="text-xl font-bold mb-4 text-dark-lighter">{service.title}</h3>
          <p class="text-dark-lighter mb-6">{service.description}</p>
          <ul class="space-y-2">
            {service.features.map(feature => (
              <li class="flex items-center text-sm dark-lighter">
                <svg class="w-4 h-4 text-dark-lighter mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </Container>
</section>