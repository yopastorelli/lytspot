---
import { TEAM_MEMBERS } from '../../utils/constants';
import Container from '../common/Container';
import SectionTitle from '../common/SectionTitle.astro';

const teamMembers = TEAM_MEMBERS;
---

<section class="py-20 bg-light-darker">
  <Container>
    <div class="max-w-5xl mx-auto">
      <SectionTitle
        title="Nossa Equipe"
        subtitle="Conheça os profissionais dedicados que tornam nossos projetos possíveis"
        alignment="center"
      />
      
      <div class="grid md:grid-cols-2 gap-8 mt-12 max-w-4xl mx-auto">
        {teamMembers.map(member => (
          <div class="bg-light rounded-lg shadow-soft overflow-hidden transition-all duration-300 hover:shadow-medium">
            <div class="h-80 overflow-hidden">
              <img 
                src={member.image} 
                alt={`Foto de ${member.name}`} 
                class="w-full h-full object-cover object-top" 
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-neutral mb-1">{member.name}</h3>
              <p class="text-accent mb-3 font-medium">{member.role}</p>
              <p class="text-neutral/80 text-sm mb-4">{member.bio}</p>
              <div class="flex gap-4">
                {member.social.map(social => (
                  <a 
                    href={social.url} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="text-accent hover:text-primary transition-colors"
                  >
                    {social.platform}
                  </a>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </Container>
</section>
