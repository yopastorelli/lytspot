---
import Container from '../common/Container';
import SectionTitle from '../common/SectionTitle.astro';
import { TEAM_MEMBERS } from '../../utils/constants';
---

<section class="py-20 bg-gray-50">
  <Container>
    <SectionTitle
      title="Nossa Equipe"
      subtitle="Profissionais apaixonados por capturar momentos Ãºnicos"
    />

    <div class="grid md:grid-cols-3 gap-8">
      {TEAM_MEMBERS.map(member => (
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <img
            src={member.image}
            alt={member.name}
            class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
          />
          <h3 class="text-xl font-bold mb-2">{member.name}</h3>
          <p class="text-primary mb-3">{member.role}</p>
          <p class="text-gray-600 mb-4">{member.bio}</p>
          <div class="flex justify-center space-x-4">
            {member.social.map(social => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-primary transition-colors"
              >
                <span class="sr-only">{social.platform}</span>
                <i class={`fab fa-${social.platform.toLowerCase()}`}></i>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>