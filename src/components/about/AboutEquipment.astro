---
import Container from '../common/Container';
import SectionTitle from '../common/SectionTitle.astro';
import { EQUIPMENT } from '../../utils/constants';
---

<section class="py-20">
  <Container>
    <SectionTitle
      title="Nossos Equipamentos"
      subtitle="Tecnologia de ponta para resultados excepcionais"
    />

    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-2xl font-bold mb-6">Drones Profissionais</h3>
        <div class="space-y-4">
          {EQUIPMENT.drones.map(drone => (
            <div class="bg-gray-50 p-6 rounded-lg">
              <h4 class="font-bold mb-2">{drone.model}</h4>
              <p class="text-gray-600 mb-4">{drone.description}</p>
              <ul class="space-y-2">
                {drone.features.map(feature => (
                  <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

      <div>
        <h3 class="text-2xl font-bold mb-6">Câmeras e Acessórios</h3>
        <div class="space-y-4">
          {EQUIPMENT.cameras.map(camera => (
            <div class="bg-gray-50 p-6 rounded-lg">
              <h4 class="font-bold mb-2">{camera.model}</h4>
              <p class="text-gray-600 mb-4">{camera.description}</p>
              <ul class="space-y-2">
                {camera.features.map(feature => (
                  <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>
  </Container>
</section>