---
import { Image } from 'astro:assets';
import PortfolioGrid from './portfolio/PortfolioGrid';
import SectionTitle from './common/SectionTitle.astro';

const categories = [
  'Todos',
  'Eventos',
  'Corporativo',
  'Publicidade',
  'Ensaios'
];
---

<section class="py-20 bg-dark">
  <div class="container">
    <SectionTitle
      title="Nosso Portfólio"
      subtitle="Conheça alguns dos nossos trabalhos mais recentes"
    />

    <div class="flex gap-4 justify-center mb-12 overflow-x-auto pb-4">
      {categories.map(category => (
        <button class="px-6 py-2 rounded-full border border-gray-300 text-gray-100 hover:border-primary-light hover:text-primary-light transition-colors">
          {category}
        </button>
      ))}
    </div>

    <PortfolioGrid client:load />
  </div>
</section>