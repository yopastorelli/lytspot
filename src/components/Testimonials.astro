---
import SectionTitle from './common/SectionTitle.astro';
import TestimonialSlider from './testimonials/TestimonialSlider';

const testimonials = [
  {
    name: 'João Silva',
    company: 'Evento Corp',
    image: '/images/testimonials/joao.jpg',
    text: 'Excelente trabalho! As imagens aéreas capturadas pela LYTSPOT deram um toque especial ao nosso evento corporativo.'
  },
  {
    name: 'Maria Santos',
    company: 'Wedding Planner',
    image: '/images/testimonials/maria.jpg',
    text: 'Profissionais extremamente competentes. As fotos e vídeos do casamento ficaram simplesmente perfeitos!'
  },
  {
    name: 'Pedro Costa',
    company: 'Construtora Horizonte',
    image: '/images/testimonials/pedro.jpg',
    text: 'As imagens aéreas dos nossos empreendimentos são fundamentais para nossas campanhas de marketing.'
  }
];
---

<section class="py-20 bg-dark-lighter">
  <div class="container">
    <SectionTitle
      title="Depoimentos"
      subtitle="O que nossos clientes dizem sobre nós"
    />
    
    <TestimonialSlider testimonials={testimonials} client:load />
  </div>
</section>