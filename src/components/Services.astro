---
const services = [
  {
    title: 'Filmagem com Drones',
    description: 'Captação aérea profissional para eventos, publicidade e projetos especiais.',
    icon: 'drone'
  },
  {
    title: 'Fotografia Profissional',
    description: 'Ensaios fotográficos, eventos corporativos e campanhas publicitárias.',
    icon: 'camera'
  },
  {
    title: 'Vídeos Corporativos',
    description: 'Produção audiovisual completa para sua empresa ou evento.',
    icon: 'video'
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Nossos Serviços</h2>
    
    <div class="grid md:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mb-6">
            <span class="text-primary text-2xl">{service.icon}</span>
          </div>
          <h3 class="text-xl font-bold mb-4">{service.title}</h3>
          <p class="text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>