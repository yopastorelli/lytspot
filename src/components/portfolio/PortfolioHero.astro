---
import Container from '../common/Container';
import SectionTitle from '../common/SectionTitle.astro';

interface Props {
  category?: string;
}

const { category } = Astro.props;

const categoryTitles: Record<string, string> = {
  eventos: 'Eventos',
  festas: 'Festas',
  ensaios: 'Ensaios',
  imobiliario: 'Imobiliario',
};

const title = category ? categoryTitles[category] : 'Nosso portfolio';
---

<section class="pt-32 pb-20 bg-dark">
  <Container>
    <div class="max-w-3xl mx-auto">
      <SectionTitle 
        title={title} 
        subtitle="Explore nossos trabalhos e projetos que destacam nossa paixão por qualidade" 
        alignment="center" 
      />
      <p class="text-gray-300 text-center mt-4">
        Navegue por categorias que capturam momentos únicos e projetos impactantes. Descubra como 
        nossos trabalhos podem transformar ideias em realidade.
      </p>
    </div>
  </Container>
</section>
