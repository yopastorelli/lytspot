---
import Container from '../common/Container';
import SectionTitle from '../common/SectionTitle.astro';

interface Props {
  category?: string;
}

const { category } = Astro.props;

const categoryTitles: Record<string, string> = {
  aventuras: 'Aventuras',
  arquitetura: 'Arquitetura',
  empresas: 'Empresas',
  festasepalco: 'Festas & Palco',
  projetos: 'Projetos',
};

const title = category ? categoryTitles[category] : 'Nosso portfolio';
---

<section class="pt-20 pb-0 bg-dark">
  <Container>
    <div class="max-w-3xl mx-auto">
      <SectionTitle 
        title={title} 
        alignment="center" 
      />
    </div>
  </Container>
</section>
