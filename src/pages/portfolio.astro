---
import Layout from '../layouts/Layout.astro';
import PortfolioHero from '../components/portfolio/PortfolioHero.astro';
import PortfolioGrid from '../components/portfolio/PortfolioGrid';
import Contact from '../components/Contact.astro';

const seoDescription = "Confira nosso portfolio de trabalhos em fotografia aérea, filmagens com drone e vídeos corporativos.";
---

<Layout title="portfolio" description={seoDescription}>
  <PortfolioHero />
  <section class="py-10 bg-dark">
    <PortfolioGrid client:load />
  </section>
  <Contact />
</Layout>