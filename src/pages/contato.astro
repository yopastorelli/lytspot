---
import Layout from '../layouts/Layout.astro';
import ContactHero from '../components/contact/ContactHero.astro';
import ContactForm from '../components/contact/ContactForm';
import ContactInfo from '../components/contact/ContactInfo.astro';

const seoDescription = "Entre em contato com a LYTSPOT para orçamentos e informações sobre nossos serviços de fotografia e filmagem.";
---

<Layout title="Contato" description={seoDescription}>
  <ContactHero />
  <div class="py-20 bg-dark">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <ContactInfo />
        <ContactForm client:load />
      </div>
    </div>
  </div>
</Layout>